<script src="{{ 'test1.js' | asset_url }}" defer></script>

<div class="container">
  <products-form>
    {% if section.settings.items == "2" %}
        <div class="row">
          <p>{{section.settings.text1}}</p>
            {% for block in section.blocks %}
            <a href="{{routes.collections_url}}">{{block.settings.url}}</a>
            <span>{{block.settings.text}}</span>
            <span>{{block.settings.text2}}</span>
          {% endfor %}
        </div>
        <div class="operation">
          <button class="add">添加产品</button>
        </div>
        <div id="productsBox">
        </div>
      {%- endif -%}
  </products-form>
</div>

{% stylesheet 'scss' %}
  .row {
    display: flex;
    padding: 20px;
    justify-content: space-between;
    align-items: center;
  }
  .operation {
    padding: 0 4vw; 
    button {
      cursor: pointer;
    }
  }
  .updateForm {
    display: none;
    width: 244px;
    :focus-visible {
      outline: none;
      box-shadow: none; 
    }
    button {
      cursor: pointer;
      margin: 0 42px;
    }
  }
  
  label {
    display: inline-block;
    min-width: 38px;
    margin-bottom: 10px;
  }
  
  .deleteForm {
    display: none;
    button {
      cursor: pointer;
      margin: 0 42px;
    }
  }

  #productsBox {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    padding: 0 4%;
    margin-bottom: 50px;
    min-height: 400px;
    .productItem {
      width: 30%;
      margin-bottom: 50px;
      img {
        width: 100%;
        height: 198px;
        object-fit: cover;
      }
    }
  }
{% endstylesheet %}

